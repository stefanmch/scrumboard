# Database Configuration
DATABASE_URL="postgresql://scrumboard_user:scrumboard_password@localhost:5432/scrumboard?schema=public"
POSTGRES_DB=scrumboard
POSTGRES_USER=scrumboard_user
POSTGRES_PASSWORD=scrumboard_password
POSTGRES_PORT=5432

# NestJS Configuration
NODE_ENV=development
PORT=3001

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:3002

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production-minimum-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production-minimum-32-chars
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Authentication Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800000
HASH_SALT_LENGTH=16

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
HELMET_ENABLED=true

# Logging
LOG_LEVEL=info

# Session Management
SESSION_SECRET=your-session-secret-change-this-in-production-minimum-32-chars

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=false
