{
  "name": "scrumboard",
  "private": true,
  "scripts": {
    "start:all": "bash scripts/start-all.sh",
    "start:all:win": "powershell -ExecutionPolicy Bypass -File scripts/start-all.ps1",
    "build": "pnpm -r build",
    "dev": "pnpm --filter web dev & pnpm --filter api start:dev",
    "start": "pnpm -r start",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "prepare": "husky",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs postgres",
    "db:generate": "pnpm --filter api db:generate",
    "db:push": "pnpm --filter api db:push",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:reset": "pnpm --filter api db:reset",
    "db:studio": "pnpm --filter api db:studio",
    "db:seed": "pnpm --filter api db:seed"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "commitlint": "^19.8.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "pnpm": "^8.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0"
  }
}
